{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with Nodemon",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "program": "${workspaceFolder}/gmb-automation-backend/index.cjs",
      "cwd": "${workspaceFolder}/gmb-automation-backend", // run from backend dir
      "envFile": "${workspaceFolder}/gmb-automation-backend/.env", // load env vars
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
